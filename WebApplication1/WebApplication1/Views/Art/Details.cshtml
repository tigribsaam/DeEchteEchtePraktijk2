@model ArtViewModel
<div style="display:inline-flex;">

    <div style="max-width:50%; padding:50px">
        <img src="~/images/@Model.ImageURL" alt="Model.Name" style="width: 100%; display:inline-flex">
    </div>
    <div style="display:block; max-width:49%; padding:50px">
        <div style="padding:0">
            <h1>@Model.Name</h1>
            <h3>@Model.Artist</h3>
            <p>@Model.Description</p>
            <br />
            <h4>€ @Model.PricePerMonth per maand</h4>
            <p>
                <a type="button" class="btn btn-outline-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-artId="@Model.ArtId">Huren</a>
            </p>
            @if (Model.AllowedToEdit && Model.Available)
            {
                <p>
                    <a type="button" class="btn btn-outline-primary"
                       asp-controller="Art"
                       asp-action="DeleteArt"
                       asp-route-artId="@Model.ArtId">verwijderen</a>
                </p>
            }
        </div>

    </div>

</div>





